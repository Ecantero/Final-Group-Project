extends layout

block content
    form(id='form2' method='post' action='/create')
        label(for='Admin') Make this Admin?:
        select(name="Admin")
            option(value="admin") Yes
            option(value="user") No
        br
        label(for='name') Username: 
        input(type='text' name='username', required)
        br
        label(for='age') Age: 
        input(type='text' name='age', required)
        br
        label(for='age') Email: 
        input(type='text' name='email', required)
        br
        label(for='age') Password: 
        input(type='password' name='pass', required)
        br
        label(for='Q1') Favorite Music Genre?: 
        select(name='Q1', required)
            option(value='') Please Select
            option(value="answer1") Rap
            option(value="answer2") Pop
            option(value="answer3") Metal
            option(value="answer4") Other
        br
        label(for='Q2') Favorite Game Genre?: 
        select(name='Q2', required)
            option(value='') Please Select
            option(value="answer1") FPS
            option(value="answer2") RPG
            option(value="answer3") Racing/sports
            option(value="answer4") Fighting
        br
        label(for='Q3') Favorite Movie Genre?: 
        select(name='Q3', required)
            option(value='') Please Select
            option(value="answer1") Horror
            option(value="answer2") Romance
            option(value="answer3") Comedy
            option(value="answer4") Action-Pack
        br
        input(type='submit' value='Add Person')